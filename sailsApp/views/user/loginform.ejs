<div class="lander">
    <div class="landerOver">
        <%- partial('../partial/navbar.ejs') %>
        <div class="controller">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 login-title">
                    Let's get started.
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                  <!-- TODO: Form validation -->
                    <form role="form" class="login-form clearfix" ng-controller="LoginController as loginCtrl"
                                                                  ng-submit="loginCtrl.doLogin(loginCtrl.user)">
                        <div class="form-group">
                            <label for="phone">Phone {{loginCtrl.user.phone}} </label>
                            <input type="number" class="form-control" placeholder="Enter phone" ng-model="loginCtrl.user.phone">
                        </div>

                        <div class="form-group">
                            <label for="password">Password {{loginCtrl.user.password}}</label>
                            <input type="password" class="form-control" placeholder="Enter password" ng-model="loginCtrl.user.password">
                        </div>

                        <button  type="submit" class="btn btn-primary pull-right">Submit</botton>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>
